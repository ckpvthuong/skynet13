<% notice ||= nil %>
<% if  notice %>
  <em class="text-success"> <%= notice %></em>
<% end %>
<% if !resource.nil? && resource.errors.any? %>
  <div id="error_explanation">
    
    <ul class="list-unstyled">
      <% resource.errors.full_messages.each do |message| %>
        <li>
          <em class="text-danger">&#x25AA; <%= message %> </em>
        </li>
        
      <% end %>
    </ul>
  </div>
<% end%>