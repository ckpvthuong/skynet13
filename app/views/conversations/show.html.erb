<% opposed_user = @conversation.opposed_user(current_user) %>
<div class="chat-box d-flex flex-column" user_id="<%= opposed_user.id %>"
     conversation_id="<%=@conversation.id%>">
  <div class="header d-flex d-block align-items-center ">
    <div class="ml-2 d-flex align-items-center">
      <%= render 'shared/avatar_username',user:opposed_user,style_textname: 'width:140px' %>
      <%= render(partial: 'status/status', locals:{user:@recipient}) %>
    </div>
    <button class="close ml-auto mr-2">
      <span>&times;</span>
    </button>
  </div>
  <ul class="list-messages">
    <li class="message-markup"></li>
  </ul>
  <div class="message-control d-flex align-items-center mt-2">
    <textarea name="message-will-send" class="flex-grow-1 w-100 h-100 form-control" rows="1"
     placeholder="Enter message..."></textarea>
    <button class="send-message btn" type="button">send</button>
  </div>
</div>
