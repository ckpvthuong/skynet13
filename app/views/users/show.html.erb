<div class="container">
  
    <div class="" user_id="<%= @user.id %>">
      <div>
        <h2 class="d-inline">Profile</h2>
        
      </div>
      <div class="d-flex align-items-center">
        <strong class="d-inline mr-2">ID: <%= @user.id %></strong>
        <%= render(partial: 'status/status', locals:{user:@user}) %>
      </div>
      <p class="d-flex align-items-center">
        <strong class="mr-2"> Avatar:</strong>
        <%= render 'shared/avatar',user:@user, size:'lg' %>
      </p>
      <p class="mt-2">
        <strong>Name:</strong>
        <%= @user.name %>
      </p>
      <% if @user == current_user %>
        <p class="mt-1">
          <strong>Username:</strong>
          <%= @user.username %>
        </p>
      <% end%>
      <p class="mt-1 mb-1">
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <div>
        <div class="d-inline-block">
          <a href="<%= user_following_path(@user) %>" class="" data-remote="true" data-type="script">
            <div id="count_following-<%= @user.id %>"><%= @user.following.count %></div>
            <div>following</div>
          </a>
        </div>
        <div class="d-inline-block ml-2">
          <a href="<%= user_followers_path(@user) %>" class="" data-remote="true" data-type="script">
            <div id="count_followers-<%= @user.id %>"><%= @user.followers.count %></div>
            <div>followers</div>
          </a>
        </div>
        <div class="d-inline-block ml-2">
          <a href="<%= user_posts_path(@user) %>" class="" data-remote="true" data-type="script">
            <div id="count_followers-<%= @user.id %>"><%= @user.posts.count %></div>
            <div>posteds</div>
          </a>
        </div>
        <% if @user.id !=  current_user.id%>
          <%= render(partial:'follows/form_follow')%>
        <% end %>
      </div>
      <div class="mt-5" id="follow" markup-posts style="min-height: 1000px">
        <h2>posteds</h2>
        <%= render 'posts/list_posts' %>
      </div>
    </div>
    
  
</div>

